  <!-- Views section -->
  <Application.Views>
    <Ribbon>
	  <!-- Custom Layout Template -->
      <Ribbon.SizeDefinitions>
        <SizeDefinition Name="ColorPickerAndCheckBox">
          <ControlNameMap>
            <ControlNameDefinition Name="button1" />
            <ControlNameDefinition Name="button2" />
          </ControlNameMap>
          <GroupSizeDefinition Size="Large">
            <Row> 
              <ControlGroup>
                <ControlSizeDefinition ControlName="button1" ImageSize="Large" IsLabelVisible="true" />
                <ControlSizeDefinition ControlName="button2" ImageSize="Small" IsLabelVisible="true" />
              </ControlGroup>
            </Row>
          </GroupSizeDefinition>
          <GroupSizeDefinition Size="Medium">
            <Row> 
              <ControlGroup>
                <ControlSizeDefinition ControlName="button1" ImageSize="Large" IsLabelVisible="true" />
                <ControlSizeDefinition ControlName="button2" ImageSize="Small" IsLabelVisible="true" />
              </ControlGroup>
            </Row>
          </GroupSizeDefinition>
          <GroupSizeDefinition Size="Small">
            <Row>
              <ControlGroup>
                <ControlSizeDefinition ControlName="button1" ImageSize="Small" IsLabelVisible="true" />
                <ControlSizeDefinition ControlName="button2" ImageSize="Small" IsLabelVisible="true" />
              </ControlGroup>
            </Row>
          </GroupSizeDefinition>		  
        </SizeDefinition> 
      </Ribbon.SizeDefinitions>	

      <!-- Application Menu -->
      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="cmdMRUFileMenu">
          <ApplicationMenu.RecentItems>
            <RecentItems CommandName="cmdMRUList" MaxCount="16" EnablePinning="false"/>   
          </ApplicationMenu.RecentItems>
          <MenuGroup Class="MajorItems">
            <Button CommandName="cmdNew" />
            <Button CommandName="cmdOpen" />
            <Button CommandName="cmdSave" />
            <Button CommandName="cmdSaveAs" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="cmdPrint" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="cmdAbout" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="cmdExit" />
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>     
      
      <!-- Tabs -->
      <Ribbon.Tabs>
        <Tab CommandName="cmdTabHome">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <!-- This describes the maximum size of each group in the tab. -->
                <Scale Group="cmdGroup1" Size="Large" />
                <Scale Group="cmdGroup2" Size="Medium" />
				        <Scale Group="cmdViewGroup" Size="Medium" />
				        <Scale Group="cmdMDIGroup" Size="Medium" />
              </ScalingPolicy.IdealSizes>
              <!-- This describes the order and how the groups shrink when the window is resized. -->
              <Scale Group="cmdGroup1" Size="Medium" />
              <Scale Group="cmdGroup2" Size="Popup" />
			        <Scale Group="cmdViewGroup" Size="Popup" />
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          <Group CommandName="cmdGroup1" SizeDefinition="FourButtons">
            <Button CommandName="cmdNew" />
            <Button CommandName="cmdOpen" />
            <Button CommandName="cmdSave" />
            <Button CommandName="cmdSaveAs" />
          </Group>
          <Group CommandName="cmdGroup2" SizeDefinition="ThreeButtons-OneBigAndTwoSmall">
            <Button CommandName="cmdPaste" />
            <Button CommandName="cmdCopy" />
            <Button CommandName="cmdCut" />
          </Group>
          <Group CommandName="cmdViewGroup" SizeDefinition="ColorPickerAndCheckBox">
            <DropDownColorPicker 
               CommandName="cmdDropDownColorPickerThemeColors"
               ColorTemplate="ThemeColors"
               IsNoColorButtonVisible = "false"/>
			      <CheckBox CommandName="cmdShowStatus" /> 
          </Group>			
		      <Group CommandName="cmdMDIGroup" SizeDefinition="FiveOrSixButtons">
			      <Button CommandName="cmdMDICascade" />
			      <Button CommandName="cmdMDITile" />
			      <Button CommandName="cmdMDIArrange" />
			      <Button CommandName="cmdMDIMin" />
            <Button CommandName="cmdMDIRes" />
			      <Button CommandName="cmdMDIClose" /> 			
          </Group>
        </Tab>
      </Ribbon.Tabs>
      
      <!-- Help button -->
      <Ribbon.HelpButton>
        <HelpButton CommandName="cmdHelp" />
      </Ribbon.HelpButton>
      
      <!-- Quick Access toolbar -->
      <Ribbon.QuickAccessToolbar>
        <QuickAccessToolbar CommandName="cmdQAT" CustomizeCommandName="cmdCustomizeQAT">
          <QuickAccessToolbar.ApplicationDefaults>       
            <Button CommandName="cmdNew" ApplicationDefaults.IsChecked="true" />         
            <Button CommandName="cmdOpen" ApplicationDefaults.IsChecked="true" />        
            <Button CommandName="cmdSave" ApplicationDefaults.IsChecked="true" />
            <Button CommandName="cmdPrint" ApplicationDefaults.IsChecked="true" />
          </QuickAccessToolbar.ApplicationDefaults>
        </QuickAccessToolbar>
      </Ribbon.QuickAccessToolbar>
    </Ribbon>
  </Application.Views>
</Application>

